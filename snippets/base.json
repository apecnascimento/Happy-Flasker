{
    "Flask hello world": {
        "prefix": "hw",
        "body": [
            "from flask import Flask",
            "app = Flask(__name__)",
            "",
            "@app.route('/')",
            "def hello():",
            "    return 'Hello World!'",
            "",
            "if __name__ == '__main__':",
            "    app.run()"
        ]
    },
    "Flask route": {
        "prefix": "route",
        "body": [
            "@app.route('/${1:route_name}')",
            "def ${2:method_name}():",
            "   pass$0"
        ]
    },
    "Flask route with GET, POST": {
        "prefix": "routegp",
        "body": [
            "@app.route('/${1:route_name}', methods=['GET', 'POST'])",
            "def ${2:method_name}():",
            "   pass$0"
        ]
    },
    "Flask route POST only": {
        "prefix": "routegp",
        "body": [
            "@app.route('/${1:route_name}', methods=['POST'])",
            "def ${2:method_name}():",
            "   pass$0"
        ]
    },
    "Flask app factory": {
        "prefix": "ffactory",
        "body": [
            "def create_app(**config_overrides):",
                "app = Flask(__name__)",
                
                "# Load config",
                "app.config.from_pyfile('development.py')",
                
                "# overrides configurations",
                "app.config.update(config_overrides)",
                
                "# setup db",
                "db.init_app(app)",
                
                "# import blueprints",
                "from '$(1:blue_print_module)' import '$(2:blue_print)'",
                
                "# register blueprints",
                "app.register_blueprint('$(2:blue_print)')",
                
            "return app"
        ]
    }
}